title: $:/plugins/joshuafontany/oembed/styles/tc-embedded
tags: [[$:/tags/Stylesheet]]

.manual-embed-edit {
  height: 200px;
  width: 100%;
}

.tc-embedded-link {
  padding-bottom: 0.5em;
}

.tc-embedded-link > button > svg {
  fill: <<colour primary>> !important;
  height: 22px !important;
  width: 22px !important;\
}

.tc-embedded {
  border: 2px solid <<colour primary>>;
}

.tc-embedded-responsive {
  position: relative;
  overflow: hidden;
}

.tc-embedded-responsive iframe {
  position: absolute;
  top: 0;
  left: 0;
  border: none;
  width: 100%;
  height: 100%;
}

.tc-embedded-16-9 {
  padding-top: 56.25%; /* 16:9 ratio */
}

.tc-embedded-8-5 {
  padding-top: 62.5%; /* 8:5 ratio */
}

.tc-embedded-3-2 {
  padding-top: 66.66%; /* 3:2 aspect ratio */
}

.tc-embedded-4-3 {
  padding-top: 75%; /* 4:3 ratio */
}

.tc-embedded-1-1 {
  padding-top: 100%; /* 1:1 ratio */
}

.tc-embedded-default {
  padding-top: 64em; /* default iframe height */
}